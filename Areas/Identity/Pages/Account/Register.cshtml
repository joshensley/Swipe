@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>My Gender</label>
                <select class="form-select form-control" aria-label="Default select example" asp-for="Input.Gender">
                    <option value="" selected>--- Select Gender ---</option>
                    @foreach (var item in Model.Genders)
                    {
                        <option value="@(item.Type)">@item.Type</option>
                    }
                </select>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>My Birthday</label>
                <input asp-for="Input.Birthday" class="form-control" />
                <span asp-validation-for="Input.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>My Ethnicity</label>
                <select class="form-select form-control" aria-label="Default select example" asp-for="Input.Ethnicity">
                    <option value="" selected>--- Select Ethnicity ---</option>
                    @foreach (var item in Model.Ethnicities)
                    {
                        <option value="@(item.Type)">@item.Type</option>
                    }
                </select>
                <span asp-validation-for="Input.Ethnicity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>My Height</label>
                <select class="form-select form-control" aria-label="Default select example" asp-for="Input.HeightID">
                    <option value="" selected>--- Select Height ---</option>
                    @foreach (var item in Model.Heights)
                    {
                        <option value="@(item.ID)">@item.DisplayHeight</option>
                    }
                </select>
                <span asp-validation-for="Input.HeightID" class="text-danger"></span>
            </div>
            <br />
            <br />

            @*User Preferences*@
            <h4>What I'm looking for.</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Input.PreferencesGenderId"></label>
                <select class="form-select form-control" aria-label="Default select example" asp-for="Input.PreferencesGenderId">
                    <option value="" selected>--- Select Gender ---</option>
                    @foreach (var item in Model.Genders)
                    {
                        <option value="@(item.ID)">@item.Type</option>
                    }
                </select>
                <span asp-validation-for="Input.PreferencesGenderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PreferencesHeightId"></label>
                <select class="form-select form-control" aria-label="Default select example" asp-for="Input.PreferencesHeightId">
                    <option value="" selected>--- Select Height ---</option>
                    @foreach (var item in Model.Heights)
                    {
                        <option value="@(item.ID)">@item.DisplayHeight</option>
                    }
                </select>
                <span asp-validation-for="Input.PreferencesHeightId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PreferencesMinAge"></label>
                <input asp-for="Input.PreferencesMinAge" class="form-control" />
                <span asp-validation-for="Input.PreferencesMinAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PreferencesMaxAge"></label>
                <input asp-for="Input.PreferencesMaxAge" class="form-control" />
                <span asp-validation-for="Input.PreferencesMaxAge" class="text-danger"></span>
            </div>
            <br />
            <br />

            <h4>Password</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
